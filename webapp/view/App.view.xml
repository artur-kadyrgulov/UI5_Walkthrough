<mvc:View    
    controllerName="kadyrgulov.walkthrough.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Text text="Hello World"/>
    <Button
        text="Say Hello"
        tooltip="Soooo it's a button"
        press=".onShowHello"/>
    <Input
        value="{/recipient/name}"
        description="Hello {/recipient/name}"
        valueLiveUpdate="true"
        width="60%"/>
</mvc:View>
